{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}
    <div class="container-fluid page">
        <div class="row">
            <div class="col">
                <h1 class="text">Modification du mot de passe</h1>
                <div class="form-control">
                    {{ form_start(modifyForm) }}
                        {{ form_row(modifyForm.oldPassword) }}
                        {{ form_row(modifyForm.Password) }}
                        <div class="form-group button2">
                            <button>Modifier votre mot de passe</button>
                        </div>
                    {{ form_end(modifyForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
