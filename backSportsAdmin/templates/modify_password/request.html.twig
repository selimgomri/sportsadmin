{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container-fluid page">
        <div class="row">
            <div class="col">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                <h1 class"text">REINITIALISATION DU MOT DE PASSE</h1>
                <div class="form-control">
                    <p class="text">entrez l'email du compte correspondant au mot de passe que vous souhaiter réinitialiser</p>
                    {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div class="form-group button">
                        <button>Réinitialisation du mot de passe</button>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

